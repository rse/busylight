{
    "compilerOptions": {
        "outDir":                  ".",
	"module":                  "ESNext",
        "moduleResolution":        "Node",
        "useDefineForClassFields": true,
        "composite":               false,
        "strict":                  true,
        "resolveJsonModule":       true,
        "isolatedModules":         true,
        "esModuleInterop":         true,
        "lib":                     [ "ESNext" ],
        "skipLibCheck":            true,
        "noEmit":                  false,
        "types":                   [],
        "rootDir":                 "."
    },
    "include": [ "*.ts" ],
    "exclude": []
}
